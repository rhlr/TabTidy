{
  "manifest_version": 3,
  "name": "TabTidy",
  "version": "1.0",
  "description": "A Chrome extension to automatically close the least interacted tab when number of tabs increases a threshold.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}